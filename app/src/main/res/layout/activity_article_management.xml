<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/medicalteam" />

        <TextView
            android:layout_width="219dp"
            android:layout_height="52dp"
            android:layout_marginTop="55dp"
            android:fontFamily="sans-serif"
            android:text="Quản Lý Bài Báo"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"

            app:srcCompat="@drawable/cardiogram" />
    </LinearLayout>


    <View
        android:id="@+id/view"
        android:layout_width="325dp"
        android:layout_height="3dp"
        android:layout_centerHorizontal="false"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#2D799B"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/danhSachBaiBao"
        android:layout_width="300dp"
        android:layout_height="454dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408"
        tools:listitem="@layout/list_view_article" />

    <Button
        android:id="@+id/themBaiBao"
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="Thêm Bài Báo"
        android:textColor="#100F0F"
        android:textSize="14sp"
        app:backgroundTint="#5C5F61"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:strokeColor="@color/black"
        app:strokeWidth="1.5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>