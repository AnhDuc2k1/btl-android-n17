<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.booking.BookingDoctor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/medicalteam" />

            <TextView
                android:layout_width="219dp"
                android:layout_height="52dp"
                android:layout_marginTop="55dp"
                android:fontFamily="sans-serif"
                android:text="Tin Tức Hôm Nay"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="40dp"

                app:srcCompat="@drawable/cardiogram" />
        </LinearLayout>

        <ListView
            android:id="@+id/userDanhSachBaiBao"
            android:layout_width="318dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/list_view_article" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>