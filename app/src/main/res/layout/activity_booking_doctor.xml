<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.booking.BookingDoctor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDSBacSi"
            android:layout_width="219dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif"
            android:text="Danh sách Bác sĩ"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/view"
            android:layout_width="325dp"
            android:layout_height="3dp"
            android:layout_centerHorizontal="false"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/userEditTextTimKiemBS"
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/bg_rounded_black"
                android:ems="10"
                android:hint="Nhập tên bác sĩ"
                android:inputType="textPersonName"
                android:textColorHighlight="@color/black"
                android:textColorLink="@color/black"
                android:textSize="14sp"
                />

            <Button
                android:id="@+id/userBtnTKBacSi"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/search_black"
                android:text="Button"
                app:backgroundTint="@color/black" />
        </LinearLayout>
        <ListView
            android:id="@+id/userDanhSachBacSi"
            android:layout_marginTop="28dp"
            android:layout_width="318dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            tools:listitem="@layout/list_view_doctor" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>