<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.booking.BookingLabtest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/heartbeat"/>

            <TextView
                android:layout_width="219dp"
                android:layout_height="52dp"
                android:layout_marginTop="55dp"
                android:fontFamily="sans-serif"
                android:text="Đặt dịch vụ khám"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="325dp"
            android:layout_height="3dp"
            android:layout_centerHorizontal="false"
            android:layout_gravity="center"
            android:background="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/editTextTimKiemDvKham"
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/bg_rounded_black"
                android:ems="10"
                android:hint="Nhập tên gói khám"
                android:inputType="text"
                android:textColorHighlight="@color/black"
                android:textColorLink="@color/black"
                android:textSize="14sp"
                />

            <Button
                android:id="@+id/btnTimKiemDvKham"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/search_black"
                android:text="Button"
                app:backgroundTint="@color/black"
                />
        </LinearLayout>
        <ListView
            android:id="@+id/listGoiKham"
            android:layout_width="318dp"
            android:layout_height="470dp"
            android:layout_gravity="center"
            tools:listitem="@layout/custom_labtest_item" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>