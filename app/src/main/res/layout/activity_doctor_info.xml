<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.booking.DoctorInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:layout_margin="20dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_blue"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewThongTinChiTietBS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Thông tin Bác Sĩ"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="180dp"
                    android:layout_height="180dp"

                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/doctor_ava"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.185"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.8" />
            </TableRow>

            <TableRow android:layout_marginTop="50dp">

                <TextView
                    android:background="@color/white"
                    android:text="Họ và tên:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/userTVTenBS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    ></TextView>
            </TableRow>

            <TableRow android:layout_marginTop="40dp">

                <TextView
                    android:text="Chuyên khoa:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/userTVChuyenKhoa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"></TextView>
            </TableRow>

            <TableRow android:layout_marginTop="40dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/userTVSDT"
                    android:layout_width="180dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"></TextView>
            </TableRow>

            <TableRow android:layout_marginTop="40dp">

                <TextView
                    android:text="Kinh nghiệm:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/userTVKinhNghiem"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"></TextView>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/userBtnChonBSi"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="#87CEFA"
                android:padding="5dp"
                android:text="Chọn bác sĩ"
                android:textColor="#000000"
                app:strokeColor="@color/black"
                app:strokeWidth="1.5dp" />

            <Button
                android:id="@+id/userBtnQLDSBS"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:backgroundTint="#F08080"
                android:padding="5dp"
                android:text="Quay lại"
                android:textColor="#000000"
                app:strokeColor="@color/black"
                app:strokeWidth="1.5dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>