<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.labtest.LabtestManagement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="335dp"
            android:layout_height="30dp"
            android:text="Quản Lý Gói Khám"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

    <View
        android:layout_width="325dp"
        android:layout_height="3dp"
        android:background="#2D799B"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/searchLabtestField"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nhập tên gói khám"
            android:textColorHighlight="@color/black"
            android:textColorLink="@color/black"
            android:textSize="14sp"
            android:background="@drawable/custom_edit_text"
            android:layout_marginLeft="40dp"
            />

        <Button
            android:id="@+id/searchLabtestButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/search_icon"
            android:text=""
            app:backgroundTint="#19A7CE"
            android:layout_marginLeft="30dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listLabtest"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <Button
        android:id="@+id/addLabtest"
        android:layout_width="202dp"
        android:layout_height="58dp"
        android:backgroundTint="#FFFFFF"
        android:padding="5dp"
        android:text="Thêm mới gói khám"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:strokeColor="#2D799B"
        app:strokeWidth="3dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>